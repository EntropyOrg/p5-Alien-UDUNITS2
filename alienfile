use alienfile;

use Config;

plugin 'PkgConfig' => 'udunits';

share {
	requires 'Alien::gmake' => 0.14;

	plugin Download => (
		url => 'ftp://ftp.unidata.ucar.edu/pub/udunits/',
		version => qr/udunits-([\d\.]+)\.tar\.gz/,
	);

	plugin Extract => 'tar.gz';

	plugin 'Build::Autoconf';

	build [
		"%{configure}",
		'%{make}',
		'%{make} install',
	];
};
