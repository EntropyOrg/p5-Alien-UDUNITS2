use alienfile;

use Config;

plugin 'PkgConfig' => 'udunits';

share {
	requires 'Alien::gmake' => 0.14;

	plugin Download => (
		url => 'https://www.unidata.ucar.edu/downloads/udunits/udunits-2.2.26.tar.gz',
	);

	plugin Extract => 'tar.gz';

	plugin 'Build::Autoconf';

	build [
		"%{configure}",
		'%{make}',
		'%{make} install',
	];
};
